<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/toolbar"
        android:gravity="center"
        android:text="설정"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/LogoutButton"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerInParent="true"
        android:backgroundTint="#b7e5ff"
        android:text="로그아웃"
        android:textSize="14sp" />

    <Button
        android:id="@+id/revokeButton"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/LogoutButton"
        android:layout_centerInParent="true"
        android:backgroundTint="#b7e5ff"
        android:text="회원탈퇴" />

    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:backgroundTint="#99CAF1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mypost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#B3D8F6"
            android:drawableBottom="@drawable/ic_baseline_person_24"
            android:text="내글모아보기" />

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#B3D8F6"
            android:drawableBottom="@drawable/ic_baseline_people_24"
            android:text="게시판" />

        <Button
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#B3D8F6"
            android:drawableBottom="@drawable/ic_baseline_settings_24"
            android:text="설정" />
    </LinearLayout>
    
</RelativeLayout>
